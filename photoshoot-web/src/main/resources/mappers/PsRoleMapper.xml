    <select id="selectUserRoleById" resultMap="userRoleResultMap">
        SELECT
        ps_role.role_name,
        ps_user.user_name,
        ps_user.user_password,
        ps_user.user_role
        FROM
        ps_user
        INNER JOIN ps_role ON ps_role.role_id = ps_user.user_role
        WHERE user_id=#{user_id}

    </select>

